{
    "IdentityServerData": {
        "IdentityResources": [
            {
                "Name": "roles",
                "Enabled": true,
                "DisplayName": "Roles",
                "UserClaims": [
                    "role"
                ]
            },
            {
                "Name": "openid",
                "Enabled": true,
                "Required": true,
                "DisplayName": "Your user identifier",
                "UserClaims": [
                    "sub"
                ]
            },
            {
                "Name": "profile",
                "Enabled": true,
                "DisplayName": "User profile",
                "Description": "Your user profile information (first name, last name, etc.)",
                "Emphasize": true,
                "UserClaims": [
                    "name",
                    "family_name",
                    "given_name",
                    "middle_name",
                    "nickname",
                    "preferred_username",
                    "profile",
                    "picture",
                    "website",
                    "gender",
                    "birthdate",
                    "zoneinfo",
                    "locale",
                    "updated_at"
                ]
            },
            {
                "Name": "email",
                "Enabled": true,
                "DisplayName": "Your email address",
                "Emphasize": true,
                "UserClaims": [
                    "email",
                    "email_verified"
                ]
            },
            {
                "Name": "address",
                "Enabled": true,
                "DisplayName": "Your address",
                "Emphasize": true,
                "UserClaims": [
                    "address"
                ]
            }
        ],
        "ApiScopes": [
            {
                "Name": "skoruba_identity_admin_api",
                "DisplayName": "skoruba_identity_admin_api",
                "Required": true,
                "UserClaims": [
                    "role",
                    "name"
                ]
            }
        ],
        "ApiResources": [
            {
                "Name": "skoruba_identity_admin_api",
                "Scopes": [
                    "skoruba_identity_admin_api"
                ]
            }
        ],
        "Clients": [
            {
                "ClientId": "skoruba_identity_admin",
                "ClientName": "skoruba_identity_admin",
                "ClientUri": "{{ .Values.admin.protocol }}://{{ .Values.admin.domainName }}",
                "AllowedGrantTypes": [
                    "authorization_code"
                ],
                "RequirePkce": true,
                "ClientSecrets": [
                    {
                        "Value": "skoruba_admin_client_secret"
                    }
                ],
                "RedirectUris": [
                    "{{ .Values.admin.protocol }}://{{ .Values.admin.domainName }}/signin-oidc"
                ],
                "FrontChannelLogoutUri": "{{ .Values.admin.protocol }}://{{ .Values.admin.domainName }}/signout-oidc",
                "PostLogoutRedirectUris": [
                    "{{ .Values.admin.protocol }}://{{ .Values.admin.domainName }}/signout-callback-oidc"
                ],
                "AllowedCorsOrigins": [
                    "{{ .Values.admin.protocol }}://{{ .Values.admin.domainName }}"
                ],
                "AllowedScopes": [
                    "openid",
                    "email",
                    "profile",
                    "roles"
                ]
            },
            {
                "ClientId": "skoruba_identity_admin_api_swaggerui",
                "ClientName": "skoruba_identity_admin_api_swaggerui",
                "AllowedGrantTypes": [
                    "authorization_code"
                ],
                "RequireClientSecret": false,
                "RequirePkce": true,
                "RedirectUris": [
                    "{{ .Values.api.protocol }}://{{ .Values.api.domainName }}/swagger/oauth2-redirect.html"
                ],
                "AllowedScopes": [
                    "skoruba_identity_admin_api"
                ],
                "AllowedCorsOrigins": [
                    "{{ .Values.api.protocol }}://{{ .Values.api.domainName }}"
                ]
            }
        ]
    }
}